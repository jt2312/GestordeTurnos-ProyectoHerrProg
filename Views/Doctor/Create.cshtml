@model HerramientasProgFinal.Models.Doctor

@{
    ViewData["Title"] = "Create";
}


<body>
    <br>
    <h1 class="d-flex justify-content-center">Crear Doctor</h1>
    <br>
    <br>
    <div class="align-content-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card-body card bg-light mb-3 ">  
                    <div class="align-content-center">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Edad" class="control-label">Edad</label>
                                <input asp-for="Edad" class="form-control" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>
                            <br>
                            <div class="form-group">
                                <label asp-for="Especialidad" class="control-label">Especialidad</label>
                                <input asp-for="Especialidad" class="form-control" />
                                <span asp-validation-for="Especialidad" class="text-danger"></span>                
                            </div>
                            <div class="form-group">
                                <label asp-for="ConsultorioId" class="control-label">Consultorio</label>
                                <select asp-for="ConsultorioId" class="form-control" asp-items="ViewBag.ConsultorioId"></select>       
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn btn-primary" />
                            </div>
                            <a asp-action="Index ">volver</a>
                            
                        </form>

                    </div>    
                </div>
            </div>
        </div>
    </div>
    <section Scripts>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    </section>
</body>
</html>
