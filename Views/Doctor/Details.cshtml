@model HerramientasProgFinal.Models.Doctor

@{
    ViewData["Title"] = "Details";
}

<body>
    <br>
    <h1 class="d-flex justify-content-center">Detalles del Consultorio</h1>
    <br>
    <br>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                    <div class="card-body card bg-light mb-3 ">     
                        <ul class="list-group-item ">
                            <li class="list-group-item">            
                                    <dt>Nombre: </dt> <dd>@Html.DisplayFor(model => model.Nombre)</dd>
                            </li>    
                            <li class="list-group-item">
                                <dt>Edad: </dt> <dd>@Html.DisplayFor(model => model.Edad)</dd>
                            </li>
                            <li class="list-group-item">
                                <dt>Especialidad: </dt> <dd>@Html.DisplayFor(model => model.Especialidad)</dd>
                            </li>
                            <li class="list-group-item">
                                <dt>Consultorio: </dt> <dd>@Html.DisplayFor(model => model.Consultorio_.Nombre)</dd>
                            </li>   
                            <br>                                               
                        </ul>
                    </div>
                <div>
                    <a asp-action="Edit" class="btn btn-info btn-sm text-white" asp-route-id="@Model?.Id">Editar</a>
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver</a>
                </div>
            </div>
        </div>
    </div>

</body>


