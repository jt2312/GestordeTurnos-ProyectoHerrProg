@model HerramientasProgFinal.Models.Consultorio

@{
    ViewData["Title"] = "Edit";
}


<body>
    <br>
    <h1 class="d-flex justify-content-center">Editar Consultorio</h1>
    <br>
    <br>
    <div class="align-content-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card-body card bg-light mb-3 ">  
                    <div class="align-content-center">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="control-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Direccion</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-info" />
                                <a asp-action="Index" class="btn btn-success">Volver a lista</a>                    
                            </div>
                        </form>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</body>
</html>
