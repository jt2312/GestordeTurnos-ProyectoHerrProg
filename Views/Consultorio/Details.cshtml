@model HerramientasProgFinal.Models.Consultorio

@{
    ViewData["Title"] = "Details";
}

<body>
    <br>
    <h1 class="d-flex justify-content-center">Detalles del Consultorio</h1>
    <br>
    <br>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                    <div class="card-body card bg-light mb-3 ">     
                        <ul class="list-group-item ">
                            <li class="list-group-item">            
                                <dt>Nombre: </dt> <dd>@Html.DisplayFor(model => model.Nombre)</dd>
                            </li>    
                            <li class="list-group-item">
                                <dt>Direccion: </dt> <dd>@Html.DisplayFor(model => model.Direccion)</dd>
                            </li>
                            <li class="list-group-item">
                                <dt>Doctores: </dt> <dd>@foreach (var item2 in Model.Doctores){@Html.DisplayFor(modelItem => item2.Nombre)<br />}</dd>
                            </li>
                        </ul>
                    </div>
                <div>
                    <a asp-action="Edit" class="btn btn-info btn-sm text-white" asp-route-id="@Model?.Id">Editar</a>
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver</a>
                </div>
            </div>
        </div>
    </div>

</body>
