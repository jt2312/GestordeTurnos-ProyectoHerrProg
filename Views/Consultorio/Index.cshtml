@model HerramientasProgFinal.ViewModels.ConsultorioViewModel

@{
    ViewData["Title"] = "Index";
}
    <br>
<body>
    <div class="container text-center">
            <h2>Consultorios Registrados</h2>
    </div>
    <br>
    <br>  
    <div class="col-10 col-md-6 col-lg-6 p"  > 
        <form method="get" class="d-flex" asp-action="Index">
            <label for="checkbox"></label>
            <input asp-for="filter" class="form-control me-2" type="search" placeholder="Buscar por nombre o direccion:" aria-label="Buscar por nombre o direccion:">
            <button class="btn btn-outline-info" type="submit">Buscar</button>
        </form> 
    </div>
    <br>
    <p>
        <a asp-action="Create" class="btn btn-info btn-sm text-light">Agrega un Consultorio</a>
    </p>
    <br>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Direccion
                </th>
                <th class="d-flex justify-content-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                    </svg>        
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Consultorios) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td class="d-flex justify-content-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-light">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas borrar este doctor?')">Borrar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
